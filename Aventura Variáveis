    <script>
        // ===== CRIANDO AS VARI√ÅVEIS =====
        // Aqui estamos criando as "caixinhas" e colocando valores dentro!
        
        let vida = 100;      // Caixinha "vida" come√ßa com 100
        let moedas = 0;      // Caixinha "moedas" come√ßa com 0
        let forca = 10;      // Caixinha "for√ßa" come√ßa com 10
        let nivel = 1;       // Caixinha "n√≠vel" come√ßa com 1
        
        // Fun√ß√£o para atualizar a tela com os valores das vari√°veis
        function atualizarVariaveis() {
            document.getElementById('valor-vida').textContent = vida;
            document.getElementById('valor-moedas').textContent = moedas;
            document.getElementById('valor-forca').textContent = forca;
            document.getElementById('valor-nivel').textContent = nivel;
        }
        
        // Fun√ß√£o para destacar quando uma vari√°vel muda
        function destacarVariavel(nome) {
            let elemento = document.getElementById('var-' + nome);
            elemento.classList.add('mudou');
            setTimeout(() => {
                elemento.classList.remove('mudou');
            }, 500);
        }
        
        // Fun√ß√£o para mostrar o que aconteceu no c√≥digo
        function mostrarCodigo(texto) {
            document.getElementById('codigo-explicacao').innerHTML = texto;
        }
        
        function explorar() {
            // MUDANDO A VARI√ÅVEL moedas
            let moedasEncontradas = Math.floor(Math.random() * 10) + 5;
            moedas = moedas + moedasEncontradas;  // Pega o valor antigo e SOMA!
            
            destacarVariavel('moedas');
            atualizarVariaveis();
            
            document.getElementById('historia').innerHTML = 
                `üó∫Ô∏è Voc√™ explorou e encontrou <strong>${moedasEncontradas} moedas</strong>!<br><br>
                ‚ú® Viu a vari√°vel MOEDAS mudar? Ela era menor e agora aumentou!`;
            
            mostrarCodigo(`
                <div class="codigo">moedasEncontradas = ${moedasEncontradas}</div>
                <div class="codigo">moedas = moedas + ${moedasEncontradas}</div>
                <div class="codigo">// moedas agora √© ${moedas}! üí∞</div>
            `);
        }
        
        function lutar() {
            if (vida <= 20) {
                document.getElementById('historia').innerHTML = 
                    `‚ö†Ô∏è Voc√™ est√° muito fraco para lutar! Descanse primeiro!`;
                return;
            }
            
            // MUDANDO V√ÅRIAS VARI√ÅVEIS de uma vez!
            let dano = Math.floor(Math.random() * 20) + 10;
            let recompensa = Math.floor(Math.random() * 15) + 10;
            
            vida = vida - dano;          // DIMINUI a vida
            moedas = moedas + recompensa; // AUMENTA as moedas
            
            destacarVariavel('vida');
            destacarVariavel('moedas');
            atualizarVariaveis();
            
            document.getElementById('historia').innerHTML = 
                `‚öîÔ∏è Voc√™ lutou contra um monstro!<br><br>
                ‚ù§Ô∏è Perdeu <strong>${dano} de vida</strong><br>
                üí∞ Ganhou <strong>${recompensa} moedas</strong><br><br>
                üì¶ Repare: DUAS vari√°veis mudaram ao mesmo tempo!`;
            
            mostrarCodigo(`
                <div class="codigo">dano = ${dano}</div>
                <div class="codigo">vida = vida - ${dano}  // Subtrai!</div>
                <div class="codigo">moedas = moedas + ${recompensa}  // Soma!</div>
            `);
            
            verificarGameOver();
        }
        
        function descansar() {
            // MUDANDO a vari√°vel vida
            let cura = 30;
            vida = vida + cura;  // AUMENTA a vida
            
            // N√£o deixar passar de 100
            if (vida > 100) {
                vida = 100;  // MUDA o valor para 100
            }
            
            destacarVariavel('vida');
            atualizarVariaveis();
            
            document.getElementById('historia').innerHTML = 
                `üò¥ Voc√™ descansou e recuperou <strong>${cura} de vida</strong>!<br><br>
                üíö Sua vari√°vel VIDA aumentou!`;
            
            mostrarCodigo(`
                <div class="codigo">cura = 30</div>
                <div class="codigo">vida = vida + 30</div>
                <div class="codigo">SE vida > 100:</div>
                <div class="codigo">  vida = 100  // Limita no m√°ximo</div>
            `);
        }
        
        function treinar() {
            if (moedas < 20) {
                document.getElementById('historia').innerHTML = 
                    `üí∏ Voc√™ precisa de 20 moedas para treinar! Voc√™ tem apenas ${moedas}.`;
                return;
            }
            
            // MUDANDO m√∫ltiplas vari√°veis
            moedas = moedas - 20;  // GASTA moedas
            forca = forca + 5;     // AUMENTA for√ßa
            
            // SE ficou forte o suficiente, AUMENTA o n√≠vel!
            if (forca >= 20 && nivel === 1) {
                nivel = nivel + 1;  // MUDA o n√≠vel
                destacarVariavel('nivel');
            }
            
            destacarVariavel('moedas');
            destacarVariavel('forca');
            atualizarVariaveis();
            
            document.getElementById('historia').innerHTML = 
                `üèãÔ∏è Voc√™ treinou e ficou mais forte!<br><br>
                üí∞ Gastou <strong>20 moedas</strong><br>
                üí™ Ganhou <strong>5 de for√ßa</strong><br><br>
                ${forca >= 20 && nivel > 1 ? '‚≠ê SUBIU DE N√çVEL!' : ''}`;
            
            mostrarCodigo(`
                <div class="codigo">moedas = moedas - 20  // Subtrai</div>
                <div class="codigo">forca = forca + 5     // Soma</div>
                <div class="codigo">// Agora: moedas=${moedas}, for√ßa=${forca}</div>
            `);
        }
        
        function verificarGameOver() {
            if (vida <= 0) {
                vida = 0;
                atualizarVariaveis();
                document.getElementById('historia').innerHTML = 
                    `üíÄ <strong>GAME OVER!</strong><br><br>
                    Sua vari√°vel VIDA chegou a 0!<br><br>
                    <button onclick="reiniciar()">üîÑ Jogar de Novo</button>`;
                document.getElementById('acoes').style.display = 'none';
            }
        }
        
        function reiniciar() {
            // RESETANDO todas as vari√°veis para os valores iniciais!
            vida = 100;
            moedas = 0;
            forca = 10;
            nivel = 1;
            
            atualizarVariaveis();
            document.getElementById('acoes').style.display = 'flex';
            document.getElementById('historia').innerHTML = 
                `üîÑ Jogo reiniciado! Todas as vari√°veis voltaram aos valores iniciais!`;
            
            mostrarCodigo(`
                <div class="codigo">vida = 100</div>
                <div class="codigo">moedas = 0</div>
                <div class="codigo">forca = 10</div>
                <div class="codigo">nivel = 1</div>
            `);
        }
    </script>
