    <script>
        // ========== CRIANDO AS VARI√ÅVEIS ==========
        let vida = 100;
        let mana = 50;
        let inimigo = 80;
        
        // ========== CRIANDO AS FUN√á√ïES (FEITI√áOS) ==========
        
        // Fun√ß√£o 1: SEM par√¢metros (sempre faz a mesma coisa)
        function curar() {
            vida = vida + 20;
            if (vida > 100) vida = 100;  // N√£o passa de 100
            atualizarStats();
            mostrarMensagem("‚ú® Voc√™ usou <strong>curar()</strong>!<br>üíö Recuperou 20 de vida!");
            mostrarCodigo("curar()", "vida = vida + 20");
        }
        
        // Fun√ß√£o 2: SEM par√¢metros
        function atacar() {
            let dano = 15;
            inimigo = inimigo - dano;
            atualizarStats();
            mostrarMensagem("‚ö° Voc√™ usou <strong>atacar()</strong>!<br>‚öîÔ∏è Causou " + dano + " de dano no inimigo!");
            mostrarCodigo("atacar()", "dano = 15<br>inimigo = inimigo - 15");
            verificarVitoria();
        }
        
        // Fun√ß√£o 3: COM par√¢metro (recebe um n√∫mero)
        function superAtaque(poder) {
            let dano = poder * 2;  // Usa o n√∫mero que voc√™ passou!
            inimigo = inimigo - dano;
            mana = mana - 10;
            atualizarStats();
            mostrarMensagem("üîÆ Voc√™ usou <strong>superAtaque(" + poder + ")</strong>!<br>üí• Causou " + dano + " de dano! (gastou 10 de mana)");
            mostrarCodigo("superAtaque(10)", "poder = 10<br>dano = poder * 2<br>dano = " + dano);
            verificarVitoria();
        }
        
        // Fun√ß√£o 4: COM par√¢metro que afeta M√öLTIPLAS vari√°veis
        function fortalecer(quantidade) {
            vida = vida + quantidade;
            mana = mana + quantidade;
            if (vida > 100) vida = 100;
            atualizarStats();
            mostrarMensagem("üåü Voc√™ usou <strong>fortalecer(" + quantidade + ")</strong>!<br>üí™ Ganhou +" + quantidade + " de vida e mana!");
            mostrarCodigo("fortalecer(15)", "quantidade = 15<br>vida = vida + 15<br>mana = mana + 15");
        }
        
        // ========== FUN√á√ïES AUXILIARES ==========
        
        function atualizarStats() {
            document.getElementById('vida').textContent = vida;
            document.getElementById('mana').textContent = mana;
            document.getElementById('inimigo').textContent = inimigo;
            
            // Efeito visual
            document.querySelector('.stats').classList.add('efeito-magico');
            setTimeout(() => {
                document.querySelector('.stats').classList.remove('efeito-magico');
            }, 500);
        }
        
        function mostrarMensagem(texto) {
            document.getElementById('resultado').innerHTML = texto;
        }
        
        function mostrarCodigo(funcao, codigo) {
            let codigoExplicacao = document.querySelector('.explicacao');
            codigoExplicacao.innerHTML = `
                <h3>üí° O que aconteceu quando voc√™ chamou ${funcao}:</h3>
                <div style="background: #2c0073; color: #00ff88; padding: 15px; border-radius: 10px; font-family: 'Courier New', monospace;">
                    ${codigo}
                </div>
                <p style="margin-top: 15px;">‚ú® Viu? Voc√™ s√≥ <strong>CHAMOU</strong> a fun√ß√£o, e ela executou todo o c√≥digo que estava dentro dela!</p>
            `;
        }
        
        function verificarVitoria() {
            if (inimigo <= 0) {
                inimigo = 0;
                atualizarStats();
                mostrarMensagem("üéâ <strong>VIT√ìRIA!</strong> üéâ<br><br>Voc√™ derrotou o inimigo!<br><br><button onclick='reiniciar()'>üîÑ Nova Batalha</button>");
            }
        }
        
        // ========== FUN√á√ïES QUE CHAMAM OUTRAS FUN√á√ïES ==========
        
        function usarCurar() {
            curar();  // CHAMANDO a fun√ß√£o!
        }
        
        function usarAtacar() {
            atacar();  // CHAMANDO a fun√ß√£o!
        }
        
        function usarSuperAtaque() {
            if (mana < 10) {
                mostrarMensagem("‚ùå Sem mana suficiente! Voc√™ precisa de 10 de mana.");
                return;
            }
            superAtaque(10);  // CHAMANDO a fun√ß√£o COM par√¢metro!
        }
        
        function usarFortalecer() {
            fortalecer(15);  // CHAMANDO a fun√ß√£o COM par√¢metro!
        }
        
        function reiniciar() {
            vida = 100;
            mana = 50;
            inimigo = 80;
            atualizarStats();
            mostrarMensagem("üîÑ Nova batalha come√ßou! Use seus feiti√ßos (fun√ß√µes) com sabedoria!");
            mostrarCodigo("reiniciar()", "vida = 100<br>mana = 50<br>inimigo = 80");
        }
