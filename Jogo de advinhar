    <script>
        // PASSO 1: GUARDAR o n√∫mero secreto
        let numeroSecreto = Math.floor(Math.random() * 50) + 1;
        let tentativasFeitas = 0;
        
        console.log("Psiu! O n√∫mero secreto √©:", numeroSecreto, "(mas n√£o conta pra ningu√©m!)");
        
        function verificarPalpite() {
            // PASSO 2: PEGAR o palpite do jogador
            let palpite = parseInt(document.getElementById('palpite').value);
            let mensagem = document.getElementById('mensagem');
            let emoji = document.getElementById('emoji');
            
            // Verificar se digitou um n√∫mero v√°lido
            if (!palpite || palpite < 1 || palpite > 50) {
                mensagem.textContent = "Digite um n√∫mero entre 1 e 50!";
                emoji.textContent = "‚ùå";
                return;
            }
            
            tentativasFeitas++;
            document.getElementById('tentativas').textContent = "Tentativas: " + tentativasFeitas;
            
            // PASSO 3 e 4: CONDI√á√ïES (SE... ENT√ÉO...)
            if (palpite === numeroSecreto) {
                // ACERTOU!
                mensagem.textContent = "üéâ PARAB√âNS! Voc√™ acertou em " + tentativasFeitas + " tentativas!";
                emoji.textContent = "üèÜ";
                mensagem.style.color = "green";
                document.getElementById('palpite').disabled = true;
            } 
            else if (palpite < numeroSecreto) {
                // N√∫mero menor
                mensagem.textContent = "üìà Tente um n√∫mero MAIOR!";
                emoji.textContent = "‚¨ÜÔ∏è";
                mensagem.style.color = "#ff6b6b";
            } 
            else {
                // N√∫mero maior
                mensagem.textContent = "üìâ Tente um n√∫mero MENOR!";
                emoji.textContent = "‚¨áÔ∏è";
                mensagem.style.color = "#4ecdc4";
            }
            
            // Limpar o campo
            document.getElementById('palpite').value = "";
            document.getElementById('palpite').focus();
        }
        
        function reiniciar() {
            // REPETIR o jogo!
            numeroSecreto = Math.floor(Math.random() * 50) + 1;
            tentativasFeitas = 0;
            
            document.getElementById('mensagem').textContent = "Tente adivinhar qual √©!";
            document.getElementById('mensagem').style.color = "#333";
            document.getElementById('emoji').textContent = "ü§î";
            document.getElementById('palpite').value = "";
            document.getElementById('palpite').disabled = false;
            document.getElementById('tentativas').textContent = "Tentativas: 0";
            
            console.log("Novo n√∫mero secreto:", numeroSecreto);
        }
        
        // Permitir apertar Enter para enviar
        document.getElementById('palpite').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                verificarPalpite();
            }
        });
    </script>
